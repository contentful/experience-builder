{
  "compilerOptions": {
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*",
    "cypress",
    "src/registries/designTokenRegistry.ts",
    "../experience-builder-sdk/src/core/componentRegistry.ts",
    "../experience-builder-sdk/src/core/componentRegistry.test.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.stories.tsx"
  ]
}
