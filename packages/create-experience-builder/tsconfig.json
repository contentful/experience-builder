{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "Node16",
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"]
}
